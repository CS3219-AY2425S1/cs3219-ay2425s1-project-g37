{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "VITE_SELF_HOST",
    "VITE_PEERPREP_FRONTEND_PORT",
    "VITE_PEERPREP_QUESTION_SPA_PORT",
    "DATABASE_URL",
    "JWT_SECRET",
    "ADMIN_SIGNUP_TOKEN",
    "OPENAI_API_KEY"
  ],
  "tasks": {
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "start": {
      "persistent": true
    }
  }
}
