    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/bun": "1.1.8",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.2",
    "prettier-plugin-tailwindcss": "0.6.6",
    "turbo": "2.1.1",
    "typescript": "5.5.4"
  },
  "packageManager": "bun@1.1.26"
}
