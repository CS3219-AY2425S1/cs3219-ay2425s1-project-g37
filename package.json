{
  "name": "@peerprep/root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "build": "bun env -- turbo build",
    "db:generate": "bun env -- turbo db:generate",
    "db:push": "DATABASE_URL='mongodb://root:root@localhost:27017/peerprep?authSource=admin&replicaSet=rs0&retryWrites=true&w=majority&directConnection=true' turbo db:push",
    "dev": "bun env -- turbo dev",
    "env": "bun run --env-file=.env",
    "format": "prettier --write .",
    "lint": "turbo lint && prettier --check .",
    "start": "bun env -- turbo start"
  },
  "dependencies": {
    "@peerprep/tsconfig": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/bun": "1.1.9",
    "@types/turndown": "5.0.5",
    "prettier": "3.3.3",
    "prettier-plugin-packagejson": "2.5.2",
    "prettier-plugin-tailwindcss": "0.6.6",
    "turbo": "2.1.2",
    "turndown": "7.2.0",
    "typescript": "5.6.2"
  },
  "packageManager": "bun@1.1.28"
}
